{
  "compilerOptions": {
    "target": "ES2020", // Versão do JS
    "module": "commonjs", // Sistema de módulos do Node.js
    "outDir": "./dist", // Onde o código compilado (JS) vai ficar
    "rootDir": "./src", // Onde código fonte (TS) está
    "strict": true, // Habilita todas as checagens estritas de tipo
    "esModuleInterop": true, // Melhora a compatibilidade com módulos CommonJS
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"] // Quais arquivos incluir na compilação
}
